<!--
=============================================================================
INBOUND POLICY
=============================================================================
Applied to all incoming requests to the GenAI Orchestrator API.
Handles: Authentication, rate limiting, request ID generation, CORS, validation.
=============================================================================
-->
<policies>
    <inbound>
        <!-- Base policy inheritance -->
        <base />
        
        <!-- =================================================================
             REQUEST CORRELATION
             Generate or forward X-Request-Id for end-to-end tracing
             ================================================================= -->
        <set-variable name="requestId" value="@{
            var clientRequestId = context.Request.Headers.GetValueOrDefault("X-Request-Id", "");
            return string.IsNullOrEmpty(clientRequestId) 
                ? Guid.NewGuid().ToString() 
                : clientRequestId;
        }" />
        <set-header name="X-Request-Id" exists-action="override">
            <value>@((string)context.Variables["requestId"])</value>
        </set-header>
        
        <!-- =================================================================
             CONTENT-TYPE VALIDATION
             Enforce JSON-only requests
             ================================================================= -->
        <choose>
            <when condition="@(context.Request.Headers.GetValueOrDefault("Content-Type", "").Contains("application/json") == false)">
                <return-response>
                    <set-status code="415" reason="Unsupported Media Type" />
                    <set-header name="Content-Type" exists-action="override">
                        <value>application/json</value>
                    </set-header>
                    <set-body>@{
                        return new JObject(
                            new JProperty("error", "Unsupported Media Type"),
                            new JProperty("message", "Content-Type must be application/json"),
                            new JProperty("request_id", (string)context.Variables["requestId"])
                        ).ToString();
                    }</set-body>
                </return-response>
            </when>
        </choose>
        
        <!-- =================================================================
             CORS HANDLING
             Allow cross-origin requests from configured origins
             ================================================================= -->
        <cors allow-credentials="false">
            <allowed-origins>
                <origin>*</origin>
            </allowed-origins>
            <allowed-methods preflight-result-max-age="300">
                <method>POST</method>
                <method>OPTIONS</method>
            </allowed-methods>
            <allowed-headers>
                <header>Content-Type</header>
                <header>Authorization</header>
                <header>Ocp-Apim-Subscription-Key</header>
                <header>X-Request-Id</header>
            </allowed-headers>
            <expose-headers>
                <header>X-Request-Id</header>
                <header>X-APIM-Request-Id</header>
            </expose-headers>
        </cors>
        
        <!-- =================================================================
             REQUEST SIZE LIMIT
             Prevent oversized payloads (10MB max)
             ================================================================= -->
        <choose>
            <when condition="@(context.Request.Headers.GetValueOrDefault("Content-Length", "0").Length > 0 && int.Parse(context.Request.Headers.GetValueOrDefault("Content-Length", "0")) > 10485760)">
                <return-response>
                    <set-status code="413" reason="Payload Too Large" />
                    <set-header name="Content-Type" exists-action="override">
                        <value>application/json</value>
                    </set-header>
                    <set-body>@{
                        return new JObject(
                            new JProperty("error", "Payload Too Large"),
                            new JProperty("message", "Request body must not exceed 10MB"),
                            new JProperty("request_id", (string)context.Variables["requestId"])
                        ).ToString();
                    }</set-body>
                </return-response>
            </when>
        </choose>
        
        <!-- =================================================================
             SUBSCRIPTION INFO HEADER
             Forward subscription metadata to backend for auditing
             ================================================================= -->
        <set-header name="X-Subscription-Id" exists-action="override">
            <value>@(context.Subscription.Id)</value>
        </set-header>
        <set-header name="X-Product-Id" exists-action="override">
            <value>@(context.Product.Id)</value>
        </set-header>
        
    </inbound>
    
    <backend>
        <!-- Forward to backend with configured settings -->
        <base />
    </backend>
    
    <outbound>
        <!-- Process outbound responses -->
        <base />
    </outbound>
    
    <on-error>
        <!-- Error handling -->
        <base />
    </on-error>
</policies>
